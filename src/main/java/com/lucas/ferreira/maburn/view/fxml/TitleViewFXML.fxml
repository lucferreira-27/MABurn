<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.Button?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.TextArea?>

<fx:root type="javafx.scene.layout.VBox" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
	<AnchorPane xmlns:fx="http://javafx.com/fxml/1">
		<!-- TODO Add Nodes -->
		<Button fx:id="btnBack" text="Back" layoutX="200.0" layoutY="0.0" onAction="#onClickButtonBack" />
		<Button fx:id="btnWatch" text="Watch" layoutX="0.0" layoutY="0.0" disable="true" visible="false" />
		<Button fx:id="btnRead" text="Read" layoutX="0.0" layoutY="0.0" disable="true" visible="false" />


		<ImageView fx:id="imageViewTitle" disable="false" fitHeight="325.0" styleClass="image-title" fitWidth="321.0" layoutX="200.0" layoutY="50.0" pickOnBounds="true" preserveRatio="true" />


		<Label fx:id="lblStatus" AnchorPane.leftAnchor="500.0" AnchorPane.rightAnchor="500.0" layoutY="100.0" visible="false" text="Status" />
		<Label fx:id="lblPublishedDate" AnchorPane.leftAnchor="500.0" AnchorPane.rightAnchor="500.0" layoutY="120.0" visible="false" text="Published" />
		<Label fx:id="lblAverageRating" AnchorPane.leftAnchor="500.0" AnchorPane.rightAnchor="500.0" layoutY="140.0" visible="false" text="Avarege Rating" />
		<Button fx:id="btnDonwload" text="Download" AnchorPane.leftAnchor="500.0" layoutY="340.0" onAction="#onClickButtonDownload" />
		<Button fx:id="btnRemove" text="Remove" AnchorPane.leftAnchor="1100.0" layoutY="340.0" onAction="#onClickButtonRemove" />
		<Button fx:id="btnHide" text="HIDE" AnchorPane.leftAnchor="1000.0" layoutY="340.0" onAction="#onClickButtonHide" />
		<Button fx:id="btnUpdate" text="Update" AnchorPane.leftAnchor="650.0" layoutY="340.0" onAction="#onClickButtonUpdate" />
		<TextArea fx:id="txtAreaSynopsis" AnchorPane.leftAnchor="800.0" AnchorPane.rightAnchor="200.0" layoutY="100.0" editable="false" wrapText="true" visible="false"></TextArea>

		<TableView fx:id="tableItens" prefHeight="300" prefWidth="800.0" layoutX="200.0" layoutY="400.0">
			<columnResizePolicy>
				<TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
			</columnResizePolicy>

			<columns>
				<TableColumn text="Name" fx:id="nameCol" minWidth="335" maxWidth="335"></TableColumn>
				<TableColumn text="Action" fx:id="sizeCol" minWidth="105" maxWidth="105"></TableColumn>
				<TableColumn text="Path" fx:id="pathCol"></TableColumn>
			</columns>

		</TableView>
		<Label alignment="CENTER" AnchorPane.leftAnchor="500.0" AnchorPane.rightAnchor="200.0" styleClass="label-title" layoutY="40.0" fx:id="lblTitle" disable="false" />


	</AnchorPane>

</fx:root>
