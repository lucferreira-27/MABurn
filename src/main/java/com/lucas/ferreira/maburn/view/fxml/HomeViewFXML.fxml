<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<fx:root stylesheets="@../css/DarkThema.css" type="javafx.scene.layout.VBox" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">

	<children>
      <BorderPane prefHeight="200.0" prefWidth="200.0">
         <right>
            <VBox alignment="CENTER" spacing="10.0" BorderPane.alignment="CENTER">
               <children>
                  <ImageView fx:id="imgSettings" fitHeight="90.0" fitWidth="600.0" onMouseClicked="#onClickOnSettings" pickOnBounds="true" preserveRatio="true">

                     <VBox.margin>
                        <Insets left="30.0" />
                     </VBox.margin>
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </ImageView>
                  <ImageView fx:id="imgDownloads" fitHeight="90.0" fitWidth="600.0" onMouseClicked="#onClickOnDownlods" pickOnBounds="true" preserveRatio="true">
                     <VBox.margin>
                        <Insets left="30.0" />
                     </VBox.margin>
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </ImageView>
                  <ImageView fx:id="imgBugReport" fitHeight="91.0" fitWidth="600.0" pickOnBounds="true" preserveRatio="true">
                     <VBox.margin>
                        <Insets left="30.0" />
                     </VBox.margin>
                     <cursor>
                        <Cursor fx:constant="DEFAULT" />
                     </cursor></ImageView>
               </children>
            </VBox>
         </right>
         <left>
            <VBox alignment="CENTER" spacing="10.0" BorderPane.alignment="CENTER">
               <children>
                  <ImageView fx:id="imgMangas" fitHeight="90.0" fitWidth="600.0" onMouseClicked="#onClickOnManga" pickOnBounds="true" preserveRatio="true">
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor></ImageView>
                  <ImageView fx:id="imgAnimes" fitHeight="90.0" fitWidth="600.0" onMouseClicked="#onClickOnAnime" pickOnBounds="true" preserveRatio="true">
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor></ImageView>
                  <ImageView fx:id="imgCalendar" fitHeight="91.0" fitWidth="600.0" pickOnBounds="true" preserveRatio="true">
                     <cursor>
                        <Cursor fx:constant="DEFAULT" />
                     </cursor></ImageView>
               </children>
            </VBox>
         </left>
         <VBox.margin>
            <Insets top="30.0" />
         </VBox.margin>
      </BorderPane>
	</children>


</fx:root>
