					<GridPane fx:id="searchItemGridPane" alignment="TOP_CENTER" hgap="1" vgap="1" visible="true">

						<Label fx:id="lblSearch" text="It looks like you don't have ${value} in the collection!" GridPane.columnIndex="0" GridPane.rowIndex="80" />
						<Button fx:id="btnSearch" onAction="#onClickButtonSearch" text="Search" visible="true" GridPane.columnIndex="0" GridPane.halignment="CENTER" GridPane.rowIndex="90" />


					</GridPane>

					<GridPane fx:id="itensImagesGridPane" alignment="TOP_CENTER" hgap="5" styleClass="itensImagesGridPane" vgap="5" />


				</ScrollPane>


			</AnchorPane>
			<ProgressIndicator fx:id="sortCollectionLoad" layoutX="270.0" layoutY="21.0" visible="false" />

			<AnchorPane fx:id="vboxLoadArea" maxHeight="225.0" maxWidth="593.0" visible="false" StackPane.alignment="TOP_CENTER">

				<ImageView fx:id="loadImageLoadArea" fitHeight="82.69" fitWidth="87.03" layoutX="253.0" layoutY="17.0" pickOnBounds="true" preserveRatio="true">

				</ImageView>
				<ProgressBar fx:id="pbReadProgress" layoutX="129.0" layoutY="113.0" prefHeight="18.0" prefWidth="334.0" visible="true" />
