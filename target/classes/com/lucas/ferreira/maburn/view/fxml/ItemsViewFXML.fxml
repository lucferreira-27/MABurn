				<GridPane.margin>
					<Insets left="200" right="200" />
				</GridPane.margin>

			</Label>


		</GridPane>
		<StackPane fx:id="stackPane">


			<AnchorPane fx:id="collectionAnchorPane" layoutY="200" managed="true" prefHeight="252.0" prefWidth="669.0" styleClass="itensImagesAnchorPane" StackPane.alignment="CENTER">


